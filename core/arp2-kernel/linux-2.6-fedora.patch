+static inline
+int bcm43xx_rx_packet(struct bcm43xx_private *bcm,
+		      struct sk_buff *skb,
+		      struct ieee80211_rx_stats *stats)
+{
+	int err;
+
+	err = ieee80211_rx(bcm->ieee, skb, stats);
+	if (unlikely(err == 0))
+		return -EINVAL;
+	return 0;
