+{
+	tpmif_cachep = kmem_cache_create("tpmif_cache", sizeof (tpmif_t),
+					 0, 0, NULL, NULL);
+}
+
+void __init tpmif_interface_exit(void)
+{
+	kmem_cache_destroy(tpmif_cachep);
+}
