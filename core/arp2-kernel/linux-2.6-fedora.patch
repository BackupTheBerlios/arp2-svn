+/* Helper macros to save on and restore values from the radio->interfstack */
+#ifdef stack_save
+# undef stack_save
+#endif
+#ifdef stack_restore
+# undef stack_restore
+#endif
+#define stack_save(value)  \
+	do {							\
+	 	assert(i < ARRAY_SIZE(radio->interfstack));	\
+		stack[i++] = (value);				\
+	} while (0)
+
+#define stack_restore()  \
+	({							\
+	 	assert(i < ARRAY_SIZE(radio->interfstack));	\
+	 	stack[i++];					\
+	})
