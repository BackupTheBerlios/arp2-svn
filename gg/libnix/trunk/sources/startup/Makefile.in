# make startup-files
# 13-Apr-94 G. Nikl
# 14-Apr-94 M. Fleischer clean+veryclean added

#### Start of system configuration section. ####

srcdir =	@srcdir@
VPATH =		@srcdir@

host_cpu =	@host_cpu@

CC =		@CC@
CPP =		@CPP@
AS =		@AS@

AR =		@AR@
RANLIB =	@RANLIB@
AWK =		@AWK@

#### End system configuration section ####

OPTIONS=-I$(srcdir)/../headers -O -fomit-frame-pointer

%.o: %.c
	$(CC) $(OPTIONS) -c $^ 2>&1|tee $*.err
	-if test ! -s $*.err; then rm $*.err; fi
	echo "\$$$(V)" >>$@

.PHONY: all filelist subdirs clean veryclean

ifeq ($(host_cpu),m68k)
all: nrcrt0.o nbcrt0.o ncrt0.o libinit.o libinitr.o devinit.o
else
all: ncrt0.o crti.o crtn.o #libinit.o libinitr.o devinit.o
endif

subdirs:

filelist:

clean:

veryclean:
	-rm *.o

ifeq ($(host_cpu),m68k)
# baserelative resident startup-code

nrcrt0.o: nrcrt0.S
	$(CC) -c $^
	echo "\$$$(V)" >>$@

# baserelative startup code

nbcrt0.o: nbcrt0.S
	$(CC) -c $^
	echo "\$$$(V)" >>$@

# normal (=large) startup code

ncrt0.o: ncrt0.S
	$(CC) -c $^
	echo "\$$$(V)" >>$@
else

ncrt0.o: crt0-ix86be.c
	$(CC) -c $^ -o $@
	echo "\$$$(V)" >>$@
endif
